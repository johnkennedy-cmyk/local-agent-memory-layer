# FML Server Configuration
# Copy this file to .env and fill in your values

# ============================================================
# OpenAI (for embeddings)
# ============================================================
OPENAI_API_KEY=sk-proj-your-api-key-here

# ============================================================
# Firebolt
# ============================================================
FIREBOLT_ACCOUNT_NAME=your-account-name
FIREBOLT_CLIENT_ID=your-client-id
FIREBOLT_CLIENT_SECRET=your-client-secret
FIREBOLT_DATABASE=your-database-name
FIREBOLT_ENGINE=your-engine-name

# ============================================================
# Ollama (local LLM)
# ============================================================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral:7b
